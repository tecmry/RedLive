<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutbacground"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/usernews_toolbar"
        android:background="@color/toolbarcolor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/Ib_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="320dp"
            android:background="@drawable/search" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/usernews_username"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:gravity="center"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:id="@+id/relativeLayout"
    android:layout_below="@+id/usernews_toolbar"
    android:layout_alignParentStart="true"
    android:layout_marginTop="5dp"
    >

</RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/white"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        >


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/withme" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="与我相关"
        android:layout_alignTop="@+id/imageView"
        android:layout_toStartOf="@+id/usernews_username"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/common"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:text="今日推荐" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/edit"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:id="@+id/out_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outenter"
        android:layout_marginTop="7dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/textView9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:layout_below="@+id/imageView"
        android:background="@color/black"
        android:layout_toEndOf="@+id/imageView2"
        android:id="@+id/linearLayout2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/imageView2"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_toEndOf="@+id/imageView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_alignBottom="@+id/imageView3"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/usernews_userimage"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_above="@+id/usernews_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        app:srcCompat="?android:attr/fingerprintAuthDrawable" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/havetrouble"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:id="@+id/linearLayout3" />

    <TextView
        android:id="@+id/everyday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_marginTop="13dp"
        android:textSize="17sp"
        android:text="@string/everydaysentence" />

    <TextView
        android:id="@+id/everydaycount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/everyday"
        android:layout_below="@+id/everyday"
        android:layout_marginTop="12dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/imageView4"
        android:text="意见反馈" />

</RelativeLayout>