<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/with_Rl"
    >

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/lcim_default_avatar_icon" />

    <TextView
        android:id="@+id/withme_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:text="Time" />

    <TextView
        android:id="@+id/with_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="UserName"
        android:layout_above="@+id/withme_Time"
        android:layout_toEndOf="@+id/userimage" />

    <TextView
        android:id="@+id/withme_lasttalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lastTalk"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_below="@+id/withme_Time"
        android:layout_alignStart="@+id/with_username" />
</RelativeLayout>